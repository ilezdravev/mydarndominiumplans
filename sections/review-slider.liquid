<section class="review_slider {{ section.settings.Class }}" style="background: {{ section.settings.Section_Background }}; padding: {{ section.settings.Section_padding_top }}px 0 {{ section.settings.Section_padding_bottom }}px 0; ">
    <div class="container">
        <div class="row main_heading">
            <div class="col-md-12">
                <h2>{{ section.settings.main_heading }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="owl-carousel review_slider_carousal owl-theme">
                    {% for block in section.blocks %}
                      <div class="item">
                        <div class="inner-col">
                            <div class="author_col">
                                <img src="{{ block.settings.Author_image | img_url: "" }}" alt="">
                                <div class="user_info">
                                    <h5>{{ block.settings.Author_name }}</h5>
                                    <p>
                                        <span>{{ block.settings.Author_designation }}</span>
                                        <div class="star_rating">
                                            {% capture num %}{{ block.settings.review_slider }}{% endcapture %}
                                            {% assign num1= num| plus: 0 %}
                                            {% for i in (0..4) %}
                                              {% if i < num1 %}
                                                <span>{% render 'fill-star-icon' %}</span>
                                              {% else %}
                                                 <span>{% render 'hollow-star-icon' %}</span>
                                              {% endif %}
                                            {% endfor %}
                                        </div>
                                    </p>
                                </div>
                            </div>
                            <div class="review_detail">
                                <h5>{{ block.settings.review_heading }}</h5>
                                <p>{{ block.settings.review_content }}</p>
                            </div>
                        </div>
                      </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<script>
  $('.review_slider_carousal').owlCarousel({
    loop: true,
    nav:true,
    margin:40,
    center: true,
    responsive: {
        0: {
            items: 1,
            margin:10
        },
        600: {
            items: 1,
            margin:10
        },
        1000: {
            items: 3,
            margin:10
        }
    }
})
</script>




{% schema %}
  {
    "name": "Review Slider",
    "settings": [
      {
        "type": "text",
        "id": "main_heading",
        "label": "Main Heading",
        "default": "Quick links"
      },
      {
        "type": "range",
        "id": "Section_padding_top",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Top",
        "default": 30
      },
      {
        "type": "range",
        "id": "Section_padding_bottom",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Bottom",
        "default": 30
      },
      {
        "type": "color",
        "id": "Section_Background",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "Class",
        "label": "Class"
      }
    ],
    "blocks": [
      {
        "type": "Review-Slide",
        "name": "Review Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "Author_image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "Author_name",
            "label": "Author Name",
            "default": "Quick links"
          },
          {
            "type": "text",
            "id": "Author_designation",
            "label": "Author Designation",
            "default": "Quick links"
          },
          {
            "type": "range",
            "id": "review_slider",
            "min": 1,
            "max": 5,
            "step": 1,
            "unit": "S",
            "label": "Review Star",
            "default": 4
          },
          {
            "type": "text",
            "id": "review_heading",
            "label": "Review Heading",
            "default": "Quick links"
          },
          {
            "type": "textarea",
            "id": "review_content",
            "label": "Review Content",
            "default": "Welcome to my shop!"
          }         
        ]
      }
    ]
  }
{% endschema %}

