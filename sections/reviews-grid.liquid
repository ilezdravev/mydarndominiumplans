<section class="review_grids {{ section.settings.Class }}" style="background: {{ section.settings.Section_Background }}; padding: {{ section.settings.Section_padding_top }}px 0 {{ section.settings.Section_padding_bottom }}px 0; ">
    <div class="container">
        <div class="row main_header">
            <div class="col-md-12">
                <h3>{{ section.settings.main_Heading }}</h3>
                {% if section.settings.sub_Heading != blank %}
                <h4>
                    <span class="icon">{%render 'rating-icon'%}</span>
                    <span>{{ section.settings.sub_Heading }}</span>
                </h4>
                {% endif %}
            </div>
        </div>
        <div class="row {% if section.settings.slider_mobile_check == true %}desktop_view{% endif %}">
            {% for block in section.blocks %}
              <div class="col-md-6">
                  <div class="inner_col">
                      <div class="image">
                          <img src="{{ block.settings.review_Image | img_url: "" }}" alt="">
                          <div class="icon">
                            {%render 'rating-icon'%}
                          </div>
                      </div>
                      <div class="desc">
                          <h6>{{ block.settings.Review_Heading }}</h6>
                          <p>{{ block.settings.review_paragraph }}</p>
                          {% if block.settings.author_name != blank %}
                            <div class="autor_div">
                                <span class="name">{{ block.settings.author_name }}</span>
                                <span>|</span>
                                <span class="date">{{ block.settings.Review_Date }}</span>
                            </div>
                          {% endif %}
                      </div>
                  </div>
              </div>
            {% endfor %}
        </div>
        {% if section.settings.slider_mobile_check == true %}
          <div class="row mobile_view">
            <div class="col-md-12">
              <div class="owl-carousel owl-carousel-reviews  owl-theme">
                {% for block in section.blocks %}
                  <div class="item">
                    <div class="inner_col">
                      <div class="image">
                          <img src="{{ block.settings.review_Image | img_url: "" }}" alt="">
                          <div class="icon">
                            {%render 'rating-icon'%}
                          </div>
                      </div>
                      <div class="desc">
                          <h6>{{ block.settings.Review_Heading }}</h6>
                          <p>{{ block.settings.review_paragraph }}</p>
                          {% if block.settings.author_name != blank %}
                            <div class="autor_div">
                                <span class="name">{{ block.settings.author_name }}</span>
                                <span>|</span>
                                <span class="date">{{ block.settings.Review_Date }}</span>
                            </div>
                          {% endif %}
                      </div>
                  </div>
                  </div>
                 {% endfor %}
              </div>
            </div>
          </div>
        {% endif %}
    </div>
</section>


<script>
  $('.owl-carousel-reviews').owlCarousel({
    loop:true,
    margin:10,
    nav:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:1
        },
        1000:{
            items:1
        }
    }
})
</script>


{% schema %}
  {
    "name": "Review Grids",
    "settings": [
      {
        "type": "text",
        "id": "main_Heading",
        "label": "Main Heading"
      },
      {
        "type": "text",
        "id": "sub_Heading",
        "label": "Sub Heading"
      },
      {
        "type": "checkbox",
        "id": "slider_mobile_check",
        "label": "Slider on Mobile",
        "default": false
      },
      {
        "type": "range",
        "id": "Section_padding_top",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Top",
        "default": 30
      },
      {
        "type": "range",
        "id": "Section_padding_bottom",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Bottom",
        "default": 30
      },
      {
        "type": "color",
        "id": "Section_Background",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "Class",
        "label": "Class"
      }
    ],
    "blocks": [
      {
        "type": "Review_Card",
        "name": "Review Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "review_Image",
            "label": "Review Image"
          },
          {
            "type": "text",
            "id": "Review_Heading",
            "label": "Review Heading"
          },
          {
            "type": "textarea",
            "id": "review_paragraph",
            "label": "Paragraph",
            "default": "Welcome to my shop!"
          },
          {
            "type": "text",
            "id": "author_name",
            "label": "Author Name"
          },
          {
            "type": "text",
            "id": "Review_Date",
            "label": "Review Date"
          }
        ]
      }
    ]
  }
{% endschema %}

