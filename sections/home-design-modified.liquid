<section class="home_design_modify" style=" background: {{ section.settings.Section_Background }}; padding: {{ section.settings.Section_padding_top }}px 0 {{ section.settings.Section_padding_bottom }}px 0; ">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="inner_col">
                  <h3>{{ section.settings.heading }}</h3>
                  <p>{{ section.settings.subheading }}</p>
                  <div class="btn_col">
                      <a href="{{ section.settings.Modify_button_url }}" class="button filled_btn">{{ section.settings.Modify_button_label }}</a>
                      <a href="{{ section.settings.Build_button_url }}" class="button line_btn">{{ section.settings.Build_button_label }}</a>
                  </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="image_wrapper">
                    <img src="{{ section.settings.main_image | img_url : "" }}" alt="" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>



{% schema %}
  {
    "name": "Design or modify",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Heading"
      },
      {
        "type":"richtext",
        "id":"subheading",
        "label":"Paragraph"
      },
      {
        "type":"text",
        "id":"Modify_button_label",
        "label":"Modify Button Label"
      },
      {
        "type":"url",
        "id":"Modify_button_url",
        "label":"Modify url"
      },
      {
        "type":"text",
        "id":"Build_button_label",
        "label":"Build Button Label"
      },
      {
        "type":"url",
        "id":"Build_button_url",
        "label":"Build url"
      },
      {
        "type":"image_picker",
        "id":"main_image",
        "label":"Main Image"
      },
      {
        "type": "range",
        "id": "Section_padding_top",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Top",
        "default": 30
      },
      {
        "type": "range",
        "id": "Section_padding_bottom",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Bottom",
        "default": 30
      },
      {
        "type": "color",
        "id": "Section_Background",
        "label": "Background Color",
        "default": "#ffffff"
      }
    ],
    "presets":[
      {
        "name":"Design or modify",
        "category":"custom"
      }
    
    ]
  }
{% endschema %}

