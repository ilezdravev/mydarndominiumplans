 <section class="affiliate_Program_sec" style="padding: {{ section.settings.Section_padding_top }}px 0 {{ section.settings.Section_padding_bottom }}px 0; ">
    <div class="container">
        <div class="row architectural-design">
            <div class="col-md-12">
                <div class="affiliated_heading">
                    <h3>{{ section.settings.heading }} </h3>
                </div>
                <div class="affiliate_Carousal_col">
                  <div class="owl-carousel affiliate_carousal owl-theme">
                    {% for block in section.blocks  %}
                      <div class="item">
                        <img src="{{ block.settings.Slider_image | img_url : "" }}" alt="" class="img-fluid">
                      </div>
                    {% endfor %}
                  </div>
                    <div class="inner_col affiliated_design_banner">
                        <div class="affiliated_content">
                            <p>{{ section.settings.slider_text }}</p>
                        </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    $('.affiliate_carousal').owlCarousel({
        loop: true,
        nav: true,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 1
            },
            1000: {
                items: 1
            }
        }
    })
</script>

{% schema %}
  {
    "name": "Affiliate slider",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Main Heading"
      },
      {
        "type": "textarea",
        "id": "slider_text",
        "label": "slider Text",
        "default": "Welcome to my shop!"
      },
      {
        "type": "range",
        "id": "Section_padding_top",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Top",
        "default": 30
      },
      {
        "type": "range",
        "id": "Section_padding_bottom",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "label": "Section Padding Bottom",
        "default": 30
      },
      {
        "type": "text",
        "id": "Class",
        "label": "Class"
      }
    ],
    "blocks": [
      {
        "type": "slider-Images",
        "name": "slider Images",
        "settings": [
            {
              "type": "image_picker",
              "id": "Slider_image",
              "label": "Slider Image"
            }
        ]
      }
    ]
  }
{% endschema %}

